<%= form_for :session, url: sign_in_path do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :senha %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <div class="actions" id="submit">
    <%= f.submit "Entrar" %>
  </div>
  <p>Novo usu√°rio? <%= link_to "Crie uma conta!", new_usuario_path %></p>
<% end %>