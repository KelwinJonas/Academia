<div class="container">
  <div class="container">
    <div class="container">
      <%= form_for :session, url: sign_in_path do |f| %>
      <img class="mb-4" src="../../assets/images/dumbbell-solid.svg" alt="" width="72" height="72" color="#563d7c">
      <h1 class="h3 mb-3 font-weight-normal">Login</h1>

      <div class="form-group">
        <div class="field">
          <%= f.label :email, class: 'form-label center' %><br />
          <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email'%>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :senha, class: 'form-label center' %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:'Senha' %>
        </div>
      </div>

      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>

      <div class="container">
        <div class="actions" id="submit">
          <%= f.submit "Entrar", class: 'btn btn-lg btn-primary btn-block' %>
        </div>
      </div>
      
      <% end %>
    </div>
  </div>
</div>
