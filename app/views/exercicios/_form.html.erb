<div class="container">
    <div class="row">
        <!--  -->
        <div class="col-3">
        </div>
        <!--  -->
        <div class="col-6">
            <%= form_with(model: exercicio, local: true) do |form| %>
            <% if exercicio.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(exercicio.errors.count, "error") %> prohibited this exercicio from being saved:</h2>

                <ul>
                    <% exercicio.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>

            <div class="container">
                <div class="form-group">
                    <div class="field">
                        <strong> <%= form.label :nome, :class => "form-label center" %> </strong>
                        <%= form.text_field :nome, :class => "form-control", placeholder: 'Nome' %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="field">
                        <strong> <%= form.label :grupo_muscular, :class => "form-label center"%> </strong>
                        <%= form.text_field :grupo_muscular, :class => "form-control", placeholder: 'Grupo Muscular' %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="field">
                        <strong> <%= form.label :descricao, :class => "form-label center" %> </strong>
                        <%= form.text_field :descricao, :class => "form-control", placeholder: 'Descrição' %>
                    </div>
                </div>

                <div class="actions">
                    <%= form.submit nil, :class  => "btn btn-info btn-sm" %>
                </div> <br>
            </div>

            <% end %>
        </div>
