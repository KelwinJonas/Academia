<p id="notice"><%= notice %></p>

<h1 class="text-center">Exercícios</h1>

<div class="container">
  <table class="table text-center">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Grupo muscular</th>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @exercicios.each do |exercicio| %>
        <tr>
          <td><%= exercicio.nome %></td>
          <td><%= exercicio.grupo_muscular %></td>
          <td><%= exercicio.descricao %></td>
          <td><%= link_to 'Exibir', exercicio, class: 'btn btn-outline-info' %></td>
          <td><%= link_to 'Editar', edit_exercicio_path(exercicio), class: 'btn btn-outline-info', id:"e-#{exercicio.nome}"%></td>
          <td><%= link_to 'Deletar', exercicio, id:"d-#{exercicio.nome}", method: :delete, class: 'btn btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="container">
  <p>
    <%= link_to 'Novo Exercicio', new_exercicio_path, :class => "btn btn-info btn-sm" %> |
    <%= link_to 'Voltar', usuario_path(current_user.id), :class => "btn btn-info btn-sm"%>
  </p>
</div>
