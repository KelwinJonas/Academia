<p id="notice"><%= notice %></p>

<h1>Exercicios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Grupo muscular</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercicios.each do |exercicio| %>
      <tr>
        <td><%= exercicio.nome %></td>
        <td><%= exercicio.grupo_muscular %></td>
        <td><%= exercicio.descricao %></td>
        <td><%= link_to 'Exibir', exercicio %></td>
        <td><%= link_to 'Editar', edit_exercicio_path(exercicio), id:"e-#{exercicio.nome}" %></td>
        <td><%= link_to 'Deletar', exercicio, id:"d-#{exercicio.nome}", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Exercicio', new_exercicio_path %>
