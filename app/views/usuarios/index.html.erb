<p id="notice"><%= notice %></p>

<h1 class="text-center">Usuários</h1>
<div class="container text-center">
  <table class="table test-center">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Tipo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.nome %></td>
          <td><%= usuario.email %></td>
          <td><%= usuario.tipo %></td>
          <td><%= link_to 'Exibir', usuario, class: 'btn btn-outline-info' %></td>
          <td><%= link_to 'Editar', edit_usuario_path(usuario), class: 'btn btn-outline-info', id:"e-#{usuario.nome}" %></td>
          <td><%= link_to 'Apagar', usuario, class: 'btn btn-outline-danger', method: :delete, data: { confirm: 'Tem certeza?' }, id:"d-#{usuario.nome}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>

<div class="text-center">
  <p class="text-center">
    <%= link_to 'Novo Usuário', new_usuario_path %> |
    <%= link_to "Perfil", usuario_path(current_user.id) %>
  </p>
</div>
